library(shiny)


ui <- fluidPage(
  
  tags$head(
    
    includeCSS("www/style.css")
  ),
  
  navbarPage("PLSDA PACKAGE - SISE",
             tabPanel(tags$h5("Tester ses données !"),
                      
                      fluidPage(
                        sidebarPanel(
                        
                          #Selector for file upload
                            fileInput("file1", "Choose CSV File",
                                      accept = c(
                                        "text/csv",
                                        "text/comma-separated-values,text/plain",
                                        ".csv")
                            ),
                            checkboxInput("entêtes", "En-têtes", TRUE),
                            
                            radioButtons("sep", "Separator",
                                         choices = c("Virgule" = ",",
                                                     "Point-virgule" = ";",
                                                     "Tabulation" = "\t",
                                                     "Space" = " "),
                                         selected = ",")
                            
                            ),
                            
                          mainPanel(
                            tableOutput("contents")
                          )
                      )
                      ),
                          
             tabPanel(
               
               tags$h5("Visualisation de données"),
               fluidPage(
                 sidebarPanel(
                   selectInput(
                     'columnid', 'Variables :', choices = "")
                   ),
                 
                 mainPanel(
                 plotOutput('graph1')
               )
             )
             ),

             tabPanel(tags$h5("Exemple"))
  ),
  
  tags$footer('Pauline Attal - Pierre Dubrulle - Ibtissam Slalmi', align='center')
)

